<!DOCTYPE html>
<html lang="en">
<head>
    @await Html.PartialAsync("_Title")
    @await Html.PartialAsync("_Metatags")
    @await Html.PartialAsync("_Icons")
    @await Html.PartialAsync("_PageLoadingStyles")
    @await Html.PartialAsync("_PageLoadingScripts")
    @await Html.PartialAsync("_Styles")
    @if (IsSectionDefined("StylePage"))
    {
        @await RenderSectionAsync("StylePage")
    }
    <!-- Main Theme Styles + Bootstrap -->
    <link rel="stylesheet" media="screen" href="~/css/theme.min.css" asp-append-version="true">
</head>
<!-- Body -->
<body class="bg-dark">
    @await Html.PartialAsync("_LoadingSpinner")
    <main class="page-wrapper">
        @await Html.PartialAsync("_SignInModal")
        @await Html.PartialAsync("_SignUpModal")
        @await Html.PartialAsync("_Navbar")
        @RenderBody()
    </main>
    @await Html.PartialAsync("_Footer")
    @if (IsSectionDefined("SidebarToggleButton"))
    {
        @await RenderSectionAsync("SidebarToggleButton")
    }
    @await Html.PartialAsync("_BackToTop")
    @await Html.PartialAsync("_Scripts")
    @if (IsSectionDefined("ScriptPage"))
    {
        @await RenderSectionAsync("ScriptPage")
    }
    <!-- Main theme script -->
    <script src="~/js/theme.min.js" asp-append-version="true"></script>
</body>
</html>