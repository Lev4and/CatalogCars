@model ColorsViewModel
<div class="card-body">
    <div class="row">
        <div class="col-sm-12 col-md-6 d-flex align-self-center">
            <h4 class="mb-0">Цвета</h4>
        </div>
        <div class="col-sm-12 col-md-6">
            <div class="d-flex justify-content-end">
                <a asp-area="Admin" asp-controller="Colors" asp-action="Add">
                    <button class="btn btn-success m-1 px-5 radius-30">Добавить</button>
                </a>
            </div>
        </div>
    </div>
    <hr />
    <div class="table-responsive">
        <div id="table_wrapper" class="dataTables_wrapper dt-bootstrap4">
            <div class="row">
                <div class="col-sm-12">
                    <table id="table" class="table table-striped table-bordered" style="width:100%">
                        <thead>
                            <tr>
                                <th>Значение</th>
                                <th>Действия</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var color in Model.Colors)
                            {
                                <tr>
                                    <td>
                                        <img width="32" height="32" style="background-color: #@color.Value;" />
                                    </td>
                                    <td>
                                        <div class="btn-group pull-right">
                                            <a asp-area="Admin" asp-controller="Colors" asp-action="Info" asp-route-id="@color.Id">
                                                <button class="btn btn-sm btn-default">
                                                    <span class="fa fa-info">

                                                    </span>
                                                </button>
                                            </a>
                                            <a asp-area="Admin" asp-controller="Colors" asp-action="Edit" asp-route-id="@color.Id">
                                                <button class="btn btn-sm btn-default">
                                                    <span class="fa fa-edit">

                                                    </span>
                                                </button>
                                            </a>
                                            <a asp-area="Admin" asp-controller="Colors" asp-action="Delete" asp-route-id="@color.Id">
                                                <button class="btn btn-sm btn-default">
                                                    <span class="fa fa-trash">

                                                    </span>
                                                </button>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                        <tfoot>
                            <tr>
                                <th>Значение</th>
                                <th>Действия</th>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
            @await Html.PartialAsync("_Pagination", Model.Pagination)
        </div>
    </div>
</div>