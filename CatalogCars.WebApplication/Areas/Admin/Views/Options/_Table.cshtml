@model OptionsViewModel
<div class="card-body">
    <div class="row">
        <div class="col-sm-12 col-md-6 d-flex align-self-center">
            <h4 class="mb-0">Опции</h4>
        </div>
        <div class="col-sm-12 col-md-6">
            <div class="d-flex justify-content-end">
                <a asp-area="Admin" asp-controller="Options" asp-action="Save">
                    <button class="btn btn-success m-1 px-5 radius-30">Добавить</button>
                </a>
            </div>
        </div>
    </div>
    <hr />
    <div class="table-responsive">
        <div id="table_wrapper" class="dataTables_wrapper dt-bootstrap4">
            <div class="row">
                <div class="col-sm-12">
                    <table id="table" class="table table-striped table-bordered" style="width:100%">
                        <thead>
                            <tr>
                                <th>Наименование</th>
                                <th>Русское наименование</th>
                                <th>Действия</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var option in Model.Options)
                            {
                                <tr>
                                    <td>@option.Name</td>
                                    <td>@option.RuName</td>
                                    <td>
                                        <div class="btn-group pull-right">

                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                        <tfoot>
                            <tr>
                                <th>Наименование</th>
                                <th>Русское наименование</th>
                                <th>Действия</th>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
            @await Html.PartialAsync("_Pagination", Model.Pagination)
        </div>
    </div>
</div>