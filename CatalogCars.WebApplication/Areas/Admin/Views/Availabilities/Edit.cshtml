@model Availability
@{
    ViewData["Section"] = "Виды доступности";
    ViewData["Title"] = "Сохранение вида доступности";
}
<div class="page-wrapper">
    <div class="page-content-wrapper">
        <div class="page-content">
            <div class="page-breadcrumb d-none d-md-flex align-items-center mb-3">
                <div class="breadcrumb-title pr-3">База данных</div>
                <div class="pl-3">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb mb-0 p-0">
                            <li class="breadcrumb-item">
                                <a asp-area="Admin" asp-controller="Home" asp-action="Index"><i class='bx bx-home-alt'></i></a>
                            </li>
                            <li class="breadcrumb-item">
                                <a asp-area="Admin" asp-controller="Availabilities" asp-action="Index">@ViewData["Section"]</a>
                            </li>
                            <li class="breadcrumb-item active" aria-current="page">@ViewData["Title"]</li>
                        </ol>
                    </nav>
                </div>
            </div>
            <div class="card radius-15">
                <div class="card-body">
                    <div class="card-title">
                        <h4 class="mb-0">Форма</h4>
                    </div>
                    <hr />
                    <div class="form-body">
                        <form method="post" asp-area="Admin" asp-controller="Availabilities" asp-action="Save">
                            @Html.HiddenFor(model => model.Id)
                            <div class="form-group row">
                                <label class="col-sm-2 col-form-label">@Html.DisplayNameFor(model => model.Name)</label>
                                <div class="col-sm-10">
                                    <input type="text" class="form-control" asp-for="Name" required>
                                    <span class="invalid-feedback" style="display: block;" asp-validation-for="Name"></span>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-sm-2 col-form-label">@Html.DisplayNameFor(model => model.RuName)</label>
                                <div class="col-sm-10">
                                    <input type="text" class="form-control" asp-for="RuName" required>
                                    <span class="invalid-feedback" style="display: block;" asp-validation-for="RuName"></span>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-sm-2 col-form-label"></label>
                                <div class="col-sm-10">
                                    <input type="submit" class="btn btn-light px-4" value="Сохранить" />
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>