                                    TickFrequency="1" />
                            </Grid>
                        </Grid>
                        <Grid Margin="0,0,0,5">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            <Grid Grid.Row="0" Margin="0,0,0,5">
                                <TextBlock
                                    FontSize="18"
                                    Text="Объём багажника (MIN)"
                                    TextAlignment="Center" />
                            </Grid>
                            <Grid Grid.Row="1">
                                <uc:DoubleSlider
                                    BeginValue="{Binding Path=Filters.RangeTrunkVolumeMin.From, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                                    EndValue="{Binding Path=Filters.RangeTrunkVolumeMin.To, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                                    IsSnapToTickEnabled="True"
                                    MaxValue="{Binding Path=Filters.RangeTrunkVolumeMin.Max, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                                    MinValue="{Binding Path=Filters.RangeTrunkVolumeMin.Min, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                                    TickFrequency="0.1" />
                            </Grid>
                        </Grid>
                        <Grid Margin="0,0,0,5">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            <Grid Grid.Row="0" Margin="0,0,0,5">
                                <TextBlock
                                    FontSize="18"
                                    Text="Объём багажника (MAX)"
                                    TextAlignment="Center" />
                            </Grid>
                            <Grid Grid.Row="1">
                                <uc:DoubleSlider
                                    BeginValue="{Binding Path=Filters.RangeTrunkVolumeMax.From, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                                    EndValue="{Binding Path=Filters.RangeTrunkVolumeMax.To, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                                    IsSnapToTickEnabled="True"
                                    MaxValue="{Binding Path=Filters.RangeTrunkVolumeMax.Max, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                                    MinValue="{Binding Path=Filters.RangeTrunkVolumeMax.Min, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                                    TickFrequency="0.1" />
                            </Grid>
                        </Grid>
                        <Grid Margin="0,10,0,10">
                            <Button
                                VerticalAlignment="Center"
                                mdt:ButtonAssist.CornerRadius="0"
                                Command="{Binding Path=Search}"
                                Content="Применить фильтры"
                                Style="{StaticResource MaterialDesignRaisedDarkButton}"
                                ToolTip="Применить фильтры">
                                <i:Interaction.Triggers>
                                    <i:EventTrigger EventName="Click">
                                        <i:InvokeCommandAction Command="{Binding Path=Search}" />
                                    </i:EventTrigger>
                                </i:Interaction.Triggers>
                            </Button>
                        </Grid>
                        <Grid Margin="0,5,0,0">
                            <Button
                                VerticalAlignment="Center"
                                mdt:ButtonAssist.CornerRadius="0"
                                Command="{Binding Path=Reset}"
                                Content="Сбросить фильтры"
                                Style="{StaticResource MaterialDesignRaisedDarkButton}"
                                ToolTip="Сбросить фильтры">
                                <i:Interaction.Triggers>
                                    <i:EventTrigger EventName="Click">
                                        <i:InvokeCommandAction Command="{Binding Path=Reset}" />
                                    </i:EventTrigger>
                                </i:Interaction.Triggers>
                            </Button>
                        </Grid>
                    </StackPanel>
                </ScrollViewer>
            </GroupBox>
        </Grid>
        <Grid
            Grid.Row="1"
            Grid.Column="1"
            Margin="5">
            <Grid.RowDefinitions>
                <RowDefinition />
            </Grid.RowDefinitions>
            <Grid Grid.Row="0">
                <ListBox
                    x:Name="AnnouncementsListBox"
                    HorizontalContentAlignment="Stretch"
                    ItemTemplate="{StaticResource AnnouncementListBoxItemDataTemplate}"
                    ItemsSource="{Binding Path=Announcements, UpdateSourceTrigger=PropertyChanged}"
                    SelectedValue="{Binding Path=SelectedAnnouncement, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}">
                    <i:Interaction.Triggers>
                        <et:RoutedEventTrigger RoutedEvent="ScrollViewer.ScrollChanged">
                            <ta:CustomCommandAction Command="{Binding ScrollViewerChanged}" />
                        </et:RoutedEventTrigger>
                    </i:Interaction.Triggers>
                </ListBox>
            </Grid>
        </Grid>
    </Grid>
</Page>
